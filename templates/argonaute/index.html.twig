{% extends 'base.html.twig' %}

{% block title %}Hello ArgonauteController!{% endblock %}

{% block body %}

<header>
    <h1>
      <img src="https://www.wildcodeschool.com/assets/logo_main-e4f3f744c8e717f1b7df3858dce55a86c63d4766d5d9a7f454250145f097c2fe.png" alt="Wild Code School logo" />
      Les Argonautes
    </h1>
  </header>
  
  <!-- Main section -->
  <main class="container mt-5">
    
    <div class="form col-4 text-center mb-5">
    <!-- New member form -->
    <h2 >Ajouter un(e) Argonaute</h2>
   
    {{ form_start(form) }}
    {{ form_row(form.nom) }}

    <div class="text-center">
        <button type="submit" class="btn btn-dark" style="font-family: 'ceasar', sans-serif;">
            Envoyer
        </button>
    </div>

    {{ form_end(form) }}
    
</div>

<h1 class="titre">Mon equipage de {{ argonautes | length }} Argonautes ! </h1>
  <!-- Equipage -->
    <table class="table table-bordered">
        {% set columns = 3 %}
        <thead>
            <tr>
              <th scope="col">Nom</th>
              <th scope="col">Nom</th>
              <th scope="col">Nom</th>
              
            </tr>
          </thead>
        {% for argonaute in argonautes %}
            {% if loop.first or loop.index0 is divisible by(columns) %}
                <tr>
            {% endif %}
            <td >{{ argonaute.nom }}</td>
        
            {% if loop.last or loop.index is divisible by(columns) %}
                </tr>
            {% endif %}
        {% endfor %}
    </table>

  
   
  </main>
  
  <footer>
    <p>Réalisé par Jason en Anthestérion de l'an 515 avant JC</p>
  </footer>
{% endblock %}
